<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <title>Url Shortener</title>
</head>
	<body>
		<div class="container">
			<h1>URL Shrinker</h1>
            <ul>
                <%if(typeof messages != 'undefined'){%>
                    <% messages.forEach(msg => { %>
                    <li><%=msg%></li>
                    <% }) %>
                <%}%>
            </ul>
			<form action="/url_shortner" method="POST" class="my-4 form-inline">
				<label for="longUrl" class="sr-only">URL</label>
				<input
					required
					placeholder="URL"
					type="url"
					name="longUrl"
					id="longUrl"
					class="form-control col mr-2"
				/>
				<button class="btn btn-success" type="submit">Generate Link</button>
			</form>

			<table class="table table-striped table-responsive">
				<thead>
					<tr>
						<th>Long URL</th>
						<th>Short URL</th>
						<th>Clicks</th>
					</tr>
				</thead>
				<tbody>
					<% response.data.forEach(shortUrl => { %>
					<tr>
						<td><a href="<%= shortUrl.longUrl %>"><%= shortUrl.longUrl %></a></td>
						<td><a href="<%= shortUrl.shortCode %>"><%= shortUrl.shortCode %></a></td>
						<td><%= shortUrl.clicks %></td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html>